<footer class="site-footer">
  <div class="container">
    <div class="footer-row">
    <!-- Left: Logo + tagline -->
      <div class="footer-left">
        <img src="/images/VentureCreations.webp" alt="Venture Creations Logo" class="footer-logo" />
        <p class="tagline">Custom shirts to support all of lifeâ€™s ventures.</p>
        <p class="copyright">&copy; <%= new Date().getFullYear() %> Venture Creations. All rights reserved.</p>

      </div>

      <!-- Right: Links + Socials -->
      <div class="footer-right">
        <ul class="footer-links">
          <li><a href="/">Home</a></li>
          <li><a href="/shop">Shop</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>

        <ul class="footer-links">
          <li><a href="/blog">Blog</a></li>

          <% if (user) { %>
              <% if (user.role === "Admin") { %>
                <li><a href="/admin">Admin Panel</a></li>
              <% } else if (user.role === "Customer") { %>
                <li><a href="/customer/dashboard">Dashboard</a></li>
              <% } %>
              <li><a href="/auth/logout">Logout</a></li>
            <% } else { %>
              <li><a href="/auth/register">Register</a></li>
              <li><a href="/auth/google">Login</a></li>
            <% } %>
          <li>
              <a href="/cart">Cart
                <% if (cart && cart.length > 0) { %>
                  <span class="cart-count">
                    <%= Math.min(cart.reduce((sum, item) => sum + item.quantity, 0), 99) %>
                  </span>
                <% } %>
              </a>
          </li>
        </ul>

        <div class="social-icons">
          <a href="https://www.facebook.com" target="_blank" aria-label="Facebook">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="https://www.instagram.com" target="_blank" aria-label="Instagram">
            <i class="fab fa-instagram"></i>
          </a>
          <a href="https://www.pinterest.com" target="_blank" aria-label="Pinterest">
            <i class="fab fa-pinterest-p"></i>
          </a>
          
        </div>
      </div>
    </div>
  </div>
</footer>